{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "az",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#000000",
          "background": "#008AD7",
          "properties": {
            "display_id": false,
            "display_name": true,
            "info_separator": " @ ",
            "prefix": " \uFD03 "
          }
        },
        {
          "type": "kubectl",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#000000",
          "background": "#22aa88",
          "properties": {
            "prefix": " \uFD31",
            "template": " {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}"
          }
        },
        {
          "type": "dotnet",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "properties": {
            "prefix": " \ue70c "
          },
          "background": "#54c73d",
          "foreground": "#000000"
        },
        {
          "type": "azfunc",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#000000",
          "background": "#FEAC19",
          "properties": {
              "prefix": " \uf0e7",
              "display_version": true,
              "display_mode": "files"
          }
        }
      ]
    },
    {
      "alignment": "right",
      "type": "prompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "background": "#FFCD58",
          "foreground": "#000000",
          "properties": {
            "always_enabled": true,
            "prefix": "\ufa1e",
            "postfix": "\u2800"
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "background": "#ff8c20",
          "foreground": "#000000",
          "properties": {
            "time_format": "2006-01-02 15:04:05",
            "prefix": " \uf017 "
          }
        },
        {
          "type": "battery",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#000000",
          "background": "#000000",
          "properties": {
            "battery_icon": "\uf583",
            "color_background": true,
            "charged_color": "#6200ff",
            "charging_color": "#d10081",
            "discharging_color": "#ff1010",
            "display_charged": true,
            "display_charging": true,
            "display_error": true,
            "charged_icon": "\uf578",
            "charging_icon": "\uf583",
            "discharging_icon": "\uf57d",
            "template": "{{ .Icon }} {{ .Percentage }}%"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#f0f0f0",
          "background": "#2f2f2f",
          "properties": {
            "root_icon": "\uF0E7",
            "postfix": "<#f0f0f0> \ue0b1</>"
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#fafafa",
          "background": "#2f2f2f",
          "properties": {
            "style": "agnoster_short",
            "enable_hyperlink": true,
            "home_icon": "\uF7DB ",
            "folder_icon": "<#B5B2C2>\ue5fe </>",
            "folder_separator_icon": "<#f0f0f0>\uE0b9 </>"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "\uE0bE",
          "trailing_diamond": "\uE0b8",
          "foreground": "#f0f0f0",
          "background": "#2f2f2f",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "display_status": true,
            "status_colors_enabled": true,
            "color_background": false,
            "local_changes_color": "#f0f0f0",
            "working_color": "#E84855",
            "staging_color": "#2FDA4E",
            "ahead_color": "#2EC4B6",
            "behind_color": "#8A4FFF"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#f0f0f0",
          "properties": {
            "prefix": "\n",
            "text": "\u276F"
          }
        }
      ]
    }
  ]
}
